{
  "manifest_version": 3,
  "name": "GitHub Friday Merge Blocker",
  "version": "1.0.0",
  "description": "Blocks GitHub merge buttons on Fridays to prevent weekend deployments",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
